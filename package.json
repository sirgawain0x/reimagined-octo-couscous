{
  "name": "icp-shopping-rewards",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "preview": "vite preview",
    "bitcoin:start": "pkill bitcoind 2>/dev/null; sleep 1; bitcoind -conf=$(pwd)/bitcoin_data/bitcoin.conf -datadir=$(pwd)/bitcoin_data --port=18444 -daemon",
    "bitcoin:stop": "pkill bitcoind || true",
    "bitcoin:status": "curl -s --user ic-btc-integration:QPQiNaph19FqUsCrBRN0FII7lyM26B51fAMeBQzCb-E= --data-binary '{\"jsonrpc\": \"1.0\", \"id\":\"curltest\", \"method\": \"getblockchaininfo\", \"params\": [] }' -H 'content-type: text/plain;' http://127.0.0.1:18443/ | python3 -m json.tool"
  },
  "dependencies": {
    "@dfinity/agent": "^3.1.0",
    "@dfinity/auth-client": "^3.1.0",
    "@dfinity/candid": "^3.1.0",
    "@dfinity/principal": "^3.4.1",
    "@nextui-org/react": "^2.4.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.10",
    "ic-use-siwb-identity": "^0.1.0",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^1.0.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^1.0.4"
  }
